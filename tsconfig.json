{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "esModuleInterop": false,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "src/dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/app.js", "globals.d.ts"],
  "exclude": ["node_modules"]
}
